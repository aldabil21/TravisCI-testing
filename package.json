{
  "name": "server",
  "version": "1.0.0",
  "description": "A Node/React blog application for production use",
  "author": "",
  "license": "MIT",
  "main": "index.js",
  "engines": {
    "node": "^12.16.3",
    "npm":"6.14.7"
  },
  "jest":{
    "setupFilesAfterEnv":["./tests/setup.js"]
  },
  "scripts": {
    "test": "NODE_ENV=ci jest --testEnvironment=node --forceExit --detectOpenHandles",
    "start": "node index.js",
    "ci": "NODE_ENV=ci PORT=3000 node index.js",
    "server": "NODE_ENV=development nodemon index.js --ignore tests",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "aws-sdk": "^2.188.0",
    "body-parser": "^1.19.0", 
    "cookie-session": "^1.3.3",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "migrate-mongoose": "^4.0.0",
    "module-alias": "^2.2.1",
    "mongoose": "^5.6.9",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^2.0.0",
    "path-parser": "^4.2.0",
    "redis": "^2.8.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/mongoose": "^5.7.36",
    "@types/puppeteer": "^3.0.2",
    "concurrently": "^4.1.1",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "puppeteer": "^1.19.0"
  }
}
